# Discord Bot Configuration
# Required settings
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_GUILD_ID=your_guild_id_here

# Database settings (MongoDB)
USE_DATABASE=true
MONGODB_URI=mongodb://localhost:27017/discordbot
MONGODB_DB_NAME=discordbot

# Rate limiting with Upstash Redis (optional but recommended)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Dashboard settings
DASHBOARD_ENABLED=true
DASHBOARD_PORT=3000

# NextAuth settings
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_random_secret_string_here

# Optional settings
# BOT_PREFIX=!                # Custom command prefix (default: !)
# ENABLE_PREFIX_COMMANDS=true # Enable/disable prefix commands (default: true)
# LOG_LEVEL=info              # Logging level (debug, info, warn, error)

# Canvas is optional - if you want image generation, install with:
# npm install canvas
# If you're on Windows, you may need Visual Studio Build Tools:
# https://github.com/Automattic/node-canvas/wiki/Installation:-Windows

